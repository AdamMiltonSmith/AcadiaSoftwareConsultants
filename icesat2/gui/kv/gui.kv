                sizable_from: 'left'
                layout_content: layout_content
                strip_size: scroll_splitter.border_size
                BoxLayout:
                    id: bl
                    orientation: 'vertical'
                    padding: 50, 40
                    row_default_height: '48dp'
                    row_force_default: True
                    spacing: 10, 10
                    ScrollView:
